namespace FPSgame
{
    shader ComputeEmissiveTemperature : ComputeColor
    {
        cbuffer PerMaterial
        {
            stage float Temperature = 0.0f;
        }
        override float4 Compute()
        {
            if(Temperature>=0)
                return float4(Temperature, 0, 0, Temperature);
            else
                return float4(0, 0, Temperature, Temperature);
        }
    };
}